<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/life_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/hospital"
                android:background="@drawable/hospital" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bệnh viện"
                android:id="@+id/textView1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/atm"
                android:background="@drawable/atm" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ATM"
                android:id="@+id/textView2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/bus"
                android:background="@drawable/bus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Buýt"
                android:id="@+id/textView3" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/restaurant"
                android:background="@drawable/restaurant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quán ăn"
                android:id="@+id/textView4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/bookmark"
                android:background="@drawable/bookmark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Yêu thích"
                android:id="@+id/textView5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/trick"
                android:background="@drawable/trick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mẹo vặt"
                android:id="@+id/textView" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>